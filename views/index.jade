extends layout

block content
  .container
    nav.navbar.navbar-default.navbar-fixed-top
      .navbar-header
        a.navbar-brand.navFlag(href='/')
          span.glyphicon.glyphicon-flag(aria-hidden='true')
      .navbar-header
        h3.navTitle Friendface
      a.navbar-brand
        span.glyphicon.glyphicon-flag.navFlag(aria-hidden='true')
      .nav.nav-tabs
        li.active.navmenu(role='presentation')
          a(href='/') Home
        li.navmenu(role='presentation')
          a(href='/users') All Users
        li.navmenu(role='presentation')
          a(href='/users/:id') Me
        ul.nav.navbar-nav.navbar-header.navbar-right
          li.dropdown
            a.drop-toggle(href='#', data-toggle='dropdown', role='button', aria-haspopup='true', aria-expanded='false')
              span.glyphicon.glyphicon-off.btn-sm.btn-info.navDrop(aria-hidden='true')
            //- ideally next to this, when user is logged in, will say 'Welcome userFirstName!' to indicate logged in status
            ul.dropdown-menu
              li
                a(href='#') Log In
              li.divider(role='separator')
              li
                a(href='#') Log Out
  .container-fluid
    .page-header.splashhead
        h1.pagetitle Friendface
        h1 
          small Let your geek flag fly!
    .row
      .col-md-6.col-md-offset-3.text-center.splashimgdiv
        img.splashimg(src='/images/geekcat.jpg')
    .row
      .col-md-4.col-md-offset-1.splashdiv
        h4 Already a member? Log in below.
        form#loginForm
          label Email
          br
          input.form-control(type='email', name='email', placeholder='Email Address')
          label Password
          br
          input.form-control(type='password', name='password', placeholder='Password')
          br
          button(type='submit', class='btn btn-warning btn-lg') Log In
      .col-md-4.col-md-offset-2.splashdiv
        h4 Not a member? You should join.
        a(href='/signup', class='btn btn-warning btn-lg', id='registerButton') Sign Up
