extends layout

block content
  .container-fluid
    .page-header.splashhead
        h1.pagetitle Friendface
        h1 
          small Let your geek flag fly!
    .row
      .col-md-6.col-md-offset-3.text-center.splashimgdiv
        img.splashimg(src='/images/geekcat.jpg')
    .row
      .col-md-4.col-md-offset-1.splashdiv
        h4 Already a member? Log in below.
        form#loginForm(action='/', method="POST")
          label Email
          br
          input.form-control(type='email', name='email', placeholder='Email Address')
          label Password
          br
          input.form-control(type='password', name='password', placeholder='Password')
          br
          button(type='submit', class='btn btn-warning btn-lg') Log In
      .col-md-4.col-md-offset-2.splashdiv
        h4 Not a member? You should join.
        a(href='/signup', class='btn btn-warning btn-lg', id='registerButton') Sign Up
